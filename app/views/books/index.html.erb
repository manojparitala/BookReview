<h1 class="current-categories"><%= params[:categories]%></h1>

<% if @books.count == 0 %>
	<h1> There are no books in this category</h1>

<% else %>
	<div class="row">
	<% @books.each do |book| %>
		<div class="col-md-3">
			<a href="/books/<%= book.id %>">
			<%= image_tag book.book_img.url(:medium), class: "book" %>	
			</a>
		</div>
	<% end %>
	</div>
<% end %>

